<div class="total-amount ellipsis_inline mr-4" id="total-kanban-{{headerID}}">
    {{#if isCurrency}}
        {{#if userPreferredCurrencyId}}
            <div class="text-4xl py-1 ellipsis_inline" title="{{headerTotalPreferred}}">
                {{headerTotalPreferred}}
            </div>
            <div class="text-2xl ellipsis_inline" title="{{headerTotal}}">
                {{headerTotal}}
            </div>
        {{else}}
            <div class="text-4xl py-1 ellipsis_inline" title="{{headerTotal}}">
                {{headerTotal}}
            </div>
        {{/if}}
    {{else}}
        <div class="text-4xl py-1 ellipsis_inline" title="{{headerTotal}}">
            {{headerTotal}}
        </div>
    {{/if}}
</div>
