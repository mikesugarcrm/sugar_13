<tr name="{{model.module}}_{{model.cid}}" data-group-id="{{groupId}}" record-id="{{model.id}}"
    class="quote-data-group-list product-bundle-notes-row{{#if model.id}} sortable ui-sortable{{else}} not-sortable{{/if}}">
    <td class="bg-[--primary-content-background] box-border focus-within:z-30 left-0 sticky sticky-border-tl z-10">
        <span class="absolute action-button-wrapper inset-0 left-column-save-cancel px-2 py-1">
            {{#each view.leftSaveCancelColumn}}
                {{field ../view model=../model template=../view.viewName}}
            {{/each}}
        </span>
        <span class="absolute action-button-wrapper inset-0 left-column-buttons p-2">
            {{#each view.leftColumns}}
                {{field ../view model=../model template=../view.viewName}}
            {{/each}}
        </span>
    </td>
    {{#each model.fields}}
        {{#eq name 'description'}}
            <td class="description-textarea" colspan="{{../../view.listColSpan}}">
                {{field ../../view model=../../model template=../../view.viewName}}
            </td>
        {{/eq}}
    {{/each}}
</tr>
